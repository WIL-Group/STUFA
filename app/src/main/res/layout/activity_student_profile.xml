<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient4"
    tools:context=".activities.StudentProfile">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/details_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@drawable/assistance_logo" />

            <TextView
                android:id="@+id/tvFullName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:text="TextView"
                android:textColor="@android:color/holo_orange_light"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvStudentNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:text="TextView"
                android:textColor="@android:color/holo_orange_light"
                android:textSize="20sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tvUpdateDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal"
                android:text="@string/you_can_update_your_personal_details_below_then_click_update"
                android:textColor="@color/shady"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/etEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:hint="@string/update_your_email_address"
                android:inputType="textEmailAddress"
                android:textColor="@android:color/holo_orange_light"
                android:textColorHint="@color/shady" />

            <EditText
                android:id="@+id/etFundingType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:ems="10"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:hint="@string/new_funding_type"
                android:textColor="@android:color/holo_orange_light"
                android:textColorHint="@color/shady"/>

            <EditText
                android:id="@+id/etBursar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:ems="10"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:hint="@string/new_bursar"
                android:textColor="@android:color/holo_orange_light"
                android:textColorHint="@color/shady"/>

            <EditText
                android:id="@+id/etCampus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:hint="@string/new_campus_location"
                android:inputType="textEmailAddress"
                android:textColor="@android:color/holo_orange_light"
                android:textColorHint="@color/shady"/>


            <EditText
                android:id="@+id/etCourse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:hint="@string/new_course_programme"
                android:inputType="textEmailAddress"
                android:textColor="@android:color/holo_orange_light"
                android:textColorHint="@color/shady"/>

            <Button
                android:id="@+id/btnUpdateDetails"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginTop="3dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/buttons"
                android:text="@string/update"/>

        </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/details_lay">

                <LinearLayout
                    android:id="@+id/booking_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buttons"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView27"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="@string/your_booking_details"
                            android:textColor="#FFFFFF"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvNameAndSurname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:textColor="#FFFFFF" />

                        <TextView
                            android:id="@+id/tvStudentNum"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:textColor="#FFFFFF" />

<!--                        <TextView-->
<!--                            android:id="@+id/tvBookingID"-->
<!--                            android:layout_width="match_parent"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:layout_marginStart="10dp"-->
<!--                            android:layout_marginEnd="10dp"-->
<!--                            android:text="TextView"-->
<!--                            android:textColor="#FFFFFF" />-->

                        <TextView
                            android:id="@+id/tvBookingNum"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:textColor="#FFFFFF" />


                        <TextView
                            android:id="@+id/tvBookingDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:textColor="#FFFFFF" />

                        <TextView
                            android:id="@+id/tvBookingType"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:textColor="#FFFFFF" />

                        <TextView
                            android:id="@+id/tvIsAttendedTo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:textColor="#FFFFFF" />

                        <TextView
                            android:id="@+id/tvStudentEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:textColor="#FFFFFF" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/btnDeleteBooking"
                            android:layout_width="120dp"
                            android:layout_height="35dp"
                            android:layout_marginStart="25dp"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/buttons"
                            android:text="@string/_delete" />

                        <Button
                            android:id="@+id/btnEditBooking"
                            android:layout_width="120dp"
                            android:layout_height="35dp"
                            android:layout_marginStart="25dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/buttons"
                            android:text="@string/edit" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/request_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/buttons"
                    app:layout_constraintTop_toBottomOf="@+id/booking_lay"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView28"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="@string/your_latest_request"
                            android:textColor="#FFFFFF"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvRequestStudentNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:textColor="#FFFFFF"/>

                        <TextView
                            android:id="@+id/tvRequestDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:textColor="#FFFFFF"/>

                        <TextView
                            android:id="@+id/tvRequestType"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:textColor="#FFFFFF" />


                        <TextView
                            android:id="@+id/tvIsRequestAnswered"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:textColor="#FFFFFF" />

                    </LinearLayout>

<!--                    <LinearLayout-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="match_parent"-->
<!--                        android:layout_weight="1"-->
<!--                        android:orientation="vertical">-->

<!--                        <Button-->
<!--                            android:id="@+id/btnEditRequest"-->
<!--                            android:layout_width="120dp"-->
<!--                            android:layout_height="35dp"-->
<!--                            android:layout_marginStart="40dp"-->
<!--                            android:layout_marginTop="30dp"-->
<!--                            android:layout_marginBottom="5dp"-->
<!--                            android:background="@drawable/buttons"-->
<!--                            android:text="EDIT " />-->

<!--                    </LinearLayout>-->

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/query_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/buttons"
                    app:layout_constraintTop_toBottomOf="@+id/request_layout"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView29"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="@string/queries"
                            android:textColor="#FFFFFF"
                            android:textSize="15sp"
                            android:textStyle="bold"/>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvList"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                        </androidx.recyclerview.widget.RecyclerView>

                    </LinearLayout>


                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>